<%- include("../include/head.ejs") %>

  <link rel="stylesheet" href="/frontEnd/assets/css/auth/signup.css" />

  <title>Registration Page</title>
  </head>

  <body>
    <%- include("../include/notification.ejs") %>
      <div class="signUp" method="post" action="" enctype="multipart/form-data">
        <div class="container">
          <div class="screen">
            <div class="screen__content">
              <form class="login" method="post" enctype="multipart/form-data">
                <div class="login__field">
                  <i class="login__icon fas fa-user"></i>
                  <input type="text" name="name" class="login__input" placeholder="Full Name" required />
                  <% if (validationError) { %>
                    <% if (validationError.name) { %>
                      <span class="text-danger">
                        <%=validationError.name[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>
                <div class="login__field">
                  <i class="login__icon fas fa-envelope"></i>
                  <input type="email" name="email" class="login__input" placeholder="Email" required />
                  <% if (validationError) { %>
                    <% if (validationError.email) { %>
                      <span class="text-danger">
                        <%=validationError.email[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>
                <div class="login__field">
                  <i class="login__icon fas fa-lock"></i>
                  <input type="password" name="password" class="login__input" placeholder="Password" required />
                  <% if (validationError) { %>
                    <% if (validationError.password) { %>
                      <span class="text-danger">
                        <%=validationError.password[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>
                <div class="login__field">
                  <i class="login__icon fas fa-calendar"></i>
                  <input type="number" name="age" class="login__input" placeholder="Age" min="1" required />
                  <% if (validationError) { %>
                    <% if (validationError.age) { %>
                      <span class="text-danger">
                        <%=validationError.age[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>
                <div class="login__field">
                  <i class="login__icon fas fa-venus-mars"></i>
                  <select name="gender" class="login__input" required>
                    <option value="" disabled selected>Select your gender</option>
                    <option value="1">Male</option>
                    <option value="0">Female</option>
                  </select>
                  <% if (validationError) { %>
                    <% if (validationError.gender) { %>
                      <span class="text-danger">
                        <%=validationError.gender[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>
                <div class="login__field">
                  <i class="login__icon fas fa-upload"></i>
                  <input type="file" name="image" class="login__input" required />
                  <% if (validationError) { %>
                    <% if (validationError.image) { %>
                      <span class="text-danger">
                        <%=validationError.image[0].msg %>
                      </span>
                      <% } %>
                        <% } %>
                </div>


                <button class="button login__submit">
                  <span class="button__text">Submit</span>
                  <i class="button__icon fas fa-chevron-right"></i>
                </button>
                <a href="/signin" style="margin: 0 !important;" class="login__submit">Login</a>

              </form>

              <!-- <div class="social-login">
                <h3>log in via</h3>
                <div class="social-icons">
                  <a href="#" class="social-login__icon fab fa-instagram"></a>
                  <a href="#" class="social-login__icon fab fa-facebook"></a>
                  <a href="#" class="social-login__icon fab fa-twitter"></a>
                </div>
              </div> -->
            </div>
            <div class="screen__background">
              <span class="screen__background__shape screen__background__shape4"></span>
              <span class="screen__background__shape screen__background__shape3"></span>
              <span class="screen__background__shape screen__background__shape2"></span>
              <span class="screen__background__shape screen__background__shape1"></span>
            </div>
          </div>

          <!-- <div class="right">
          </div> -->
        </div>
      </div>
      <script>
        // Prevent negative or zero age values
        document.getElementById("age").addEventListener("input", function () {
          if (this.value < 1) {
            this.value = "";
          }
        });

      </script>
      <script src="/frontEnd/assets/js/vendors.min.js" type="text/javascript"></script>
      <!-- BEGIN VENDOR JS-->
      <!-- BEGIN PAGE VENDOR JS-->
      <script src="/frontEnd/assets/js/select2.full.min.js" type="text/javascript"></script>
      <!-- END PAGE VENDOR JS-->

      <!-- BEGIN PAGE LEVEL JS-->
      <script src="/frontEnd/assets/js/form-select2.js" type="text/javascript"></script>
  </body>

  </html>