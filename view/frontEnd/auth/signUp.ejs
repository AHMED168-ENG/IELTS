<%- include("../include/head.ejs") %>

  <link rel="stylesheet" href="/frontEnd/assets/css/select.css" />

  <title>Registration Page</title>
  <style>
    .signUp {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 50px 0 !important
    }

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;

      background-color: #e9e9f0;
    }

    .signUp .container {
      display: flex;
      width: 90%;
      max-width: 1000px;
      height: auto;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .signUp .left {
      flex: 1;
      background: linear-gradient(135deg, #fdfcfb, #f3f3f3);
      padding: 40px 30px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }

    .signUp .left h2 {
      font-size: 28px;
      margin-bottom: 10px;
      color: #333;
    }

    .signUp .left p {
      font-size: 14px;
      color: #777;
      margin-bottom: 30px;
    }

    .signUp .form-group {
      margin-bottom: 20px;
      width: 100%;
    }

    .signUp .form-group label {
      display: block;
      font-size: 14px;
      margin-bottom: 8px;
      color: #555;
    }

    .signUp .form-group input,
    .signUp .form-group select {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 30px;
      font-size: 14px;
      outline: none;
      transition: border-color 0.3s;
    }

    .signUp .form-group input:focus,
    .signUp .form-group select:focus {
      border-color: #ffc107;
    }

    .signUp .form-group input[type="file"] {
      border-radius: 5px;
      padding: 5px;
    }

    .signUp .submit-btn {
      background-color: #ffc107;
      border: none;
      color: #fff;
      font-size: 16px;
      font-weight: bold;
      padding: 12px 20px;
      border-radius: 30px;
      cursor: pointer;
      width: 100%;
      margin-top: 20px;
      transition: background-color 0.3s;
    }

    .signUp .submit-btn:hover {
      background-color: #e0a806;
    }

    .signUp .social-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }

    .signUp .social-buttons button {
      flex: 1;
      background-color: #fff;
      border: 1px solid #ddd;
      color: #555;
      padding: 10px;
      border-radius: 30px;
      font-size: 14px;
      margin: 0 5px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s, color 0.3s;
    }

    .signUp .social-buttons button:hover {
      background-color: #f3f3f3;
    }

    .signUp .right {
      flex: 1;
      background: url('./frontend/assets/images/image_01.jpg') no-repeat center center/cover;
      position: relative;
    }

    .signUp .right::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
    }

    .signUp .form-links {
      margin-top: 20px;
      text-align: center;
      font-size: 14px;
    }

    .signUp .form-links a {
      color: #ffc107;
      text-decoration: none;
      font-weight: bold;
      margin: 0 5px;
    }

    .signUp .form-links a:hover {
      text-decoration: underline;
    }
  </style>
  </head>

  <body>
    <%- include("../include/notification.ejs") %>

      <div class="signUp" method="post" action="" enctype="multipart/form-data">

        <div class="container">
          <div class="left">
            <h2>Create an account</h2>
            <p>Sign up and get a 30-day free trial.</p>
            <form method="post" action="" enctype="multipart/form-data">
              <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name" required />
                <% if (validationError) { %>
                  <% if (validationError.name) { %>
                    <span class="text-danger">
                      <%=validationError.name[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required />
                <% if (validationError) { %>
                  <% if (validationError.email) { %>
                    <span class="text-danger">
                      <%=validationError.email[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required />
                <% if (validationError) { %>
                  <% if (validationError.password) { %>
                    <span class="text-danger">
                      <%=validationError.password[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <div class="form-group">
                <label for="age">Age</label>
                <input type="number" id="age" name="age" placeholder="Enter your age" min="1" required />
                <% if (validationError) { %>
                  <% if (validationError.age) { %>
                    <span class="text-danger">
                      <%=validationError.age[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" name="gender" required>
                  <option value="" disabled selected>Select your gender</option>
                  <option value="1">Male</option>
                  <option value="0">Female</option>
                </select>
                <% if (validationError) { %>
                  <% if (validationError.gender) { %>
                    <span class="text-danger">
                      <%=validationError.gender[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <div class="form-group">
                <label for="photo">Upload Picture</label>
                <input type="file" id="photo" name="image" required />
                <% if (validationError) { %>
                  <% if (validationError.image) { %>
                    <span class="text-danger">
                      <%=validationError.image[0].msg %>
                    </span>
                    <% } %>
                      <% } %>
              </div>
              <button class="submit-btn">Submit</button>
              <div class="social-buttons">
                <button>Apple</button>
                <button>Google</button>
              </div>
              <div class="form-links">
                <p>Already have an account? <a href="/signIn">Log in</a> or <a href="/">Go to Home</a></p>
              </div>
            </form>
          </div>
          <div class="right"></div>
        </div>
      </div>
      <script>
        // Prevent negative or zero age values
        document.getElementById("age").addEventListener("input", function () {
          if (this.value < 1) {
            this.value = "";
          }
        });

      </script>
      <script src="/frontEnd/assets/js/vendors.min.js" type="text/javascript"></script>
      <!-- BEGIN VENDOR JS-->
      <!-- BEGIN PAGE VENDOR JS-->
      <script src="/frontEnd/assets/js/select2.full.min.js" type="text/javascript"></script>
      <!-- END PAGE VENDOR JS-->

      <!-- BEGIN PAGE LEVEL JS-->
      <script src="/frontEnd/assets/js/form-select2.js" type="text/javascript"></script>
  </body>

  </html>